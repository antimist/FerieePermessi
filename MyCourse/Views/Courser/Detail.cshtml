@model CourseDetailViewModel;

<section class="course-info">
    <div class="row">
        <div class="col-md-9">
            <h1>@Model.Title <a class="btn btn-outline-primary btn-sn" asp-action="Edit" asp-route-id="@Model.Id"><i class="fas fa-pencil-alt"></i> Modifica</a></h1>
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <a href="#" class="btn btn-warning btn-lg btn-block subscribe-course">Iscriviti</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <p html-sanitize>@Model.Description</p>
        </div>
        <div class="col-md-3">
            <aside>
                <author>di @Model.Author</author>
                <div class="rating" title="@Model.Rating">
                    @for (int i = 1; i<=5; i++)
                    {
                        if (Model.Rating >=i)
                        {
                            <i class="fas fa-star"></i>
                        }
                        else if (Model.Rating > i-1)
                        {
                            <i class="fas fa-star-half"></i>
                        }
                        else 
                        {
                            <i class="far fa-star"></i>
                        }
                    }
                </div>
                <div class="price">
                    @Model.CurrentPrice
                    @if(!Model.CurrentPrice.Equals(Model.FullPrice))
                    {
                        <br /><s>@Model.FullPrice</s>
                    }
                </div>
                
                <img src="@Model.ImagePath"  alt="@Model.Title" asp-append-version="true">
            </aside>
        </div>
    </div>
</section>

<section class="course-lessons">  
    <h2>Lezioni (@Model.Lessons.Count)</h2>
    @foreach (var  lesson in Model.Lessons)
    {
        <hr>
        <div class="row">
            <div class="col-mb-9 d-flex align-items-center">
                <a href="#">@lesson.Title</a>
            </div>
            <div class="col-md-3 d-flex align-items-center le">
                <i class="far fa-clock"></i>&nbsp;<time>@lesson.Duration.ToString("m'm 's's'")</time>                
            </div>
        </div>
    }
    <hr>
    <div class="row course-duration">
		<div class="col-md-9 d-flex align-items-center">
            Totale
        </div>
        <div class="col-md-3 d-flex align-items-center justify-content-end">
            <i class="far fa-clock"></i><time>@Model.TotalCurseDuration.ToString("h'h 'm'm 's's'")</time>
        </div>
    </div>    
</section>
<div class="modal fade" id="voteModal" tabindex="-1" aria-labelledby="voteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="voteModalLabel">Il tuo voto</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <iframe width="100%" height="100" frameBorder="0"></iframe>
      </div>
    </div>
  </div>
</div>