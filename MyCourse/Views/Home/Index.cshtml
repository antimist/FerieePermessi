@Model HomeViewModel

<div class="jumbotron">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p class="lead">Impara in maniera facile e divertente con inostri corsi online!<br>
    Scegli da un vasto catalogo sempre a tua disposizione</p>
    <hr class="my-4">
    <p>
        <a  asp-controller="Courses" 
            asp-action="Index" 
            class="btn btn-primary">Sfoglia il catalogo dei corsi <i class="fas fa-angle-right"></i> </a></p>
</div>

<section>
    <h2>Aggiunti di recente</h2>
    @foreach (var course in Model.MostRecentCourses)
    {
<hr>
<div class="row">
    <div class="col-md-1">
        <img src="@course.ImagePath" width="50">
    </div>
    <div class="col-md-5">
        <h2>@course.Title</h2>
        <author>@course.Author</author>
    </div>
    <div class="col-md-2 rating" title="@course.Rating">
        <rating value="@course.Rating"></rating>
    </div>
    <div class="col-md-2 price">
        @course.CurrentPrice
        @if(!course.CurrentPrice.Amount.Equals(course.FullPrice.Amount))
        {
            <br /><s>@course.FullPrice</s>
        } 
    </div>
    <div class="col-md-2 d-flex align-items-center" >
        <a class="btn btn-outline-primary" asp-action="Detail" asp-route-id="@course.Id">Dettaglio</a>        
    </div>
</div>        
    }
</section>

<section>
    <h2>I migiliori di sempre</h2>
    @foreach (var course in Model.BestRatingCourses)
    {
<hr>
<div class="row">
    <div class="col-md-1">
        <img src="@course.ImagePath" width="50">
    </div>
    <div class="col-md-5">
        <h2>@course.Title</h2>
        <author>@course.Author</author>
    </div>
    <div class="col-md-2 rating" title="@course.Rating">
        <rating value="@course.Rating"></rating>    
    </div>
    <div class="col-md-2 price">
        @course.CurrentPrice
        @if(!course.CurrentPrice.Amount.Equals(course.FullPrice.Amount))
        {
            <br /><s>@course.FullPrice</s>
        } 
    </div>
    <div class="col-md-2 d-flex align-items-center" >
        <a class="btn btn-outline-primary" asp-action="Detail" asp-route-id="@course.Id">Dettaglio</a>        
    </div>
</div>        
    }    
</section>