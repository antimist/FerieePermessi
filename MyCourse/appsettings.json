{
    "Logging": {
        "LogLevel":{
            "Default": "Warning"
        }
    },

    "ConnectionStrings": {
        "Default": "Data Source=Data/MyCourse.db"
    },
    "DistributedCache" : {
        "Redis" : {
            "Configuration" : "localhost",
            "InstanceName" : "MyCurseRedisCache"
        },
        "SqlServer" : {
            "ConnectionString" : "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=DistCache;Integrated Security=True;",
            "SchemaName" : "dbo",
            "TableName" : "MyCourseSQLCache"
        }
    },
    "Courses": {
        "PerPage": 10, 
        "InHome": 3,
        "Order": {
            "By": "Rating",
            "Ascending": false,
            "Allow":["Title", "Rating", "CurrentPrice"]
        }
    },
    "ResponseCache" : {
        "Home": {
            "Duration" : 60,
            "Location" : "Client",
            "VaryByQueryKeys" : ["page"]
        }
    },
    "Kestrel": {
        "Limits": {
            "MaxRequestBodySize": 5242880
        }
    },

    "Smtp": {
        "Host": "example.org",
        "Port": 25,
        "Security": "None",
        "Username": "Username del server SMTP",
        "Password": "Password del server SMTP",
        "Sender": "MyCourse <noreplay@example.org"
    }
}

